<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.diane.brackelope.Main27Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Team Name]"
            android:id="@+id/textView35"
            android:textSize="38dp"
            android:textColor="#000000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="7"
            android:orientation="horizontal" >

            <TableLayout
                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coach"
                    android:id="@+id/textView37"
                    android:layout_row="0"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[Coach Name]"
                    android:id="@+id/textView36"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_gravity="top"
                    android:textColor="#000000" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Captain"
                    android:id="@+id/textView38"
                    android:layout_row="3"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[Captain Name]"
                    android:id="@+id/textView39"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="#000000" />

            </TableLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView"
                android:src="@android:drawable/ic_menu_mapmode"
                android:layout_gravity="right"
                android:layout_row="0"
                android:layout_column="1" />

        </GridLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&quot; [Team Motto] &quot;"
            android:id="@+id/textView40"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="______________________________________________________"
            android:id="@+id/textView51"
            android:textAlignment="center"
            android:singleLine="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STATISTICS"
            android:id="@+id/textView41"
            android:singleLine="false"
            android:visibility="visible"
            android:textSize="15dp"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="______________________________________________________"
            android:id="@+id/textView52"
            android:textAlignment="center"
            android:singleLine="true" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="7"
            android:rowCount="3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Time Record"
                android:id="@+id/textView43"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Wins]"
                android:id="@+id/textView42"
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="18dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   -   "
                android:id="@+id/textView45"
                android:layout_row="0"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Ties]"
                android:id="@+id/textView47"
                android:layout_row="0"
                android:layout_column="3"
                android:textSize="18dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   -   "
                android:id="@+id/textView48"
                android:layout_row="0"
                android:layout_column="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Winning Percentage "
                android:id="@+id/textView44"
                android:layout_row="1"
                android:layout_column="0"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Losts]"
                android:id="@+id/textView49"
                android:layout_row="0"
                android:layout_column="5"
                android:textSize="18dp"
                android:textColor="#000000" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Winning Percentage "
                android:id="@+id/textView46"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Winning Percentage] %"
                android:id="@+id/textView50"
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="18dp"
                android:textColor="#000000" />
        </GridLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="right" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center_horizontal"
            android:nestedScrollingEnabled="false"
            android:useDefaultMargins="false" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="[Tournament Name]"
                android:id="@+id/button6"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranking"
                android:id="@+id/textView53"
                android:layout_row="0"
                android:layout_column="1"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="[Ranking Position]"
                android:id="@+id/button10"
                android:layout_row="1"
                android:layout_column="1"
                android:textSize="12dp"
                android:layout_gravity="center" />
        </GridLayout>

    </LinearLayout>
</RelativeLayout>

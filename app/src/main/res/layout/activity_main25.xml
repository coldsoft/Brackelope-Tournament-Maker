<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.diane.brackelope.Main25Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teams"
            android:id="@+id/textView10"
            android:textSize="38dp" />

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            android:queryHint="Find Team"
            android:gravity="right"
            android:layout_gravity="right" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Create New Team"
            android:id="@+id/button12"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:onClick="AddCreateNewTeam" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_gravity="center_horizontal"
            android:nestedScrollingEnabled="false"
            android:useDefaultMargins="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Manager"
                android:id="@+id/textView29"
                android:layout_row="0"
                android:layout_column="2"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/imageButton"
                android:layout_row="1"
                android:layout_column="0"
                android:src="@android:drawable/ic_menu_mapmode"
                android:onClick="TeamName" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="[Team Name]"
                android:id="@+id/button"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="TeamName"
                android:layout_gravity="center" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="[Team Manager Name]"
                android:id="@+id/button2"
                android:layout_row="1"
                android:layout_column="2"
                android:textSize="12dp"
                android:layout_gravity="center" />
        </GridLayout>

    </LinearLayout>
</RelativeLayout>
